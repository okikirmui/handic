#
# ここから bigram 定義
#
# %F[0..N] Unigram文脈
# %F?: 未定義の場合は,このテンプレートを適用しない

# POS Unigram
UNIGRAM U1:%F[0]
UNIGRAM U2:%F[0],%F?[1]
UNIGRAM U3:%F[0],%F[1],%F?[2]

# Word-POS
UNIGRAM W0:%F[5]
UNIGRAM W1:%F[0]/%F[5]
UNIGRAM W2:%F[0],%F?[1]/%F[5]
UNIGRAM W3:%F[0],%F[1],%F?[2]/%F[5]

# Word-Read-POS
UNIGRAM R0:%F[6]
UNIGRAM R1:%F[5],%F[6]
UNIGRAM R2:%F[0],%F[5],%F[6]
UNIGRAM R3:%F[0],%F?[1],%F[5],%F[6]
UNIGRAM R4:%F[0],%F[1],%F?[2],%F[5],%F[6]

# char type
UNIGRAM T0:%t
UNIGRAM T1:%F[0]/%t
UNIGRAM T2:%F[0],%F?[1]/%t
UNIGRAM T3:%F[0],%F[1],%F?[2]/%t

#
# ここから bigram 定義
#
# %L[0..N] 左文脈
# %R[0..N] 右文脈
#
# %R?: 未定義の場合は,このテンプレートを適用しない

# 品詞
BIGRAM B00:%L[0]/%R[0]
BIGRAM B01:%L[0],%L?[1]/%R[0]
